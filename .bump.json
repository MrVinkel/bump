{
  "$schema": "https://raw.githubusercontent.com/mrvinkel/bump/1.0.0/bump.schema.json",
  "message": "release ${VERSION}",
  "prefix": "v",
  "commit": true,
  "fetch": true,
  "preHook": [
    "sed -i \"s/lastTag = \\\".*\\\";/lastTag = \\\"$VERSION\\\";/g\" flake.nix",
    "make vendor-hash"
  ]
}